@model MilkWayIndia.Models.Chatbot
@{
    /**/


    ViewBag.Title = "AddBackOfficeSetting";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section contain
{

    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <script src="~/Content/plugins/datepicker/bootstrap-datepicker.js"></script>

    <!-- bootstrap wysihtml5 - text editor -->
    <link href="~/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiMst");
            if (MasterClass != null) {
                MasterClass.className = MasterClass.className + " active";
            }
        });
    </script>
    <script>
        $(function () {
            $(".select2").select2();
        });
    </script>


    <section class="content-header">
        <h1>
            BackOffice Settings
        </h1>
    </section>
    <section class="content">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="btn-group-vertical">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("ChatbotList", "Admin")'">Back To Panel</button>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("AddBackOfficeSetting", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">

                                    <div id="SuccessMsg" style="color: red">@ViewBag.SuccessMsg</div>

                                    <div class="form-group">
                                        <div class="col-md-3">
                                            <label for="inputEmail3" class="control-label">Set Query</label>




                                            @Html.TextBoxFor(m => m.Query, new { @class = "form-control", @id = "Query" })

                                        </div>


                                        <div class="col-md-3">
                                            <label for="inputEmail3" class="control-label">Youtube Link</label>




                                            @Html.TextBoxFor(m => m.Youtubelink, new { @class = "form-control", @id = "Youtubelink" })

                                        </div>


                                        <div class="col-md-3">
                                            <label for="inputEmail3" class="control-label">Upload Image</label>




                                            <input type="file" name="Document1" id="Document1" />
                                            <span>Size : 300px * 300px</span><br />

                                        </div>

                                        <div class="col-md-3">
                                            <label for="inputEmail3" class="control-label">Upload Video</label>




                                            <input type="file" name="Document2" id="Document2" />
                                            <span>Mp4</span><br />

                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="inputEmail3" class="control-label">Write Steps</label>
                                            @Html.TextAreaFor(m => m.steps, new { @class = "form-control textarea", rows = "8" })
                                        </div>

                                    </div>
                                    <div class="box-footer text-right">
                                        @*<input type="button" class="btn btn-orange" value="Cancel" />*@
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>

                            </div>
                        </div>

                    }
                </div>

            </div>
        </div>
    </section>
    <script src="~/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script>
        $(function () {
            $('.textarea').wysihtml5()
        })
    </script>
}

