@model MilkWayIndia.Models.Product
@{
    ViewBag.Title = "AttributePriceChangeList";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section contain
{
    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiProduct");
            if (MasterClass != null) {
                MasterClass.className = MasterClass.className + " active";

            }
        });
    </script>

    <section class="content-header">
        @if (@TempData["error"] != null)
        {
            <script type="text/javascript">
                alert("@TempData["error"]");
            </script>
        }
        <div class="box-header with-border">
            <h3 class="box-title">Attribute Price Change List</h3>
            <div class="box-tools">
                <div class="input-group input-group-sm pull-right">
                    @*<asp:LinkButton runat="server" ID="lbtnAdd" class="btn btn-default pull-right btn-add" PostBackUrl="~/.aspx">Back</asp:LinkButton>*@

                    @* <input type="submit" value="Delete" class="btn btn-primary"  />*@

                    <input type="button" class="btn btn-primary pull-right btn-add" value="Add" onclick="location.href='@Url.Action("AddProduct", "Product")'" />


                </div>
            </div>
        </div>
        </section>

        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-body">
                            <div class="box-body table-responsive no-padding">
                                <table id="example1" class="table table-bordered table-striped" name="example1">
                                    @{int rowNo = 0;}
                                    <thead>
                                        <tr>
                                            <th>Serial</th>
                                            <th>Product</th>
                                            <th>Attribute</th>

                                            <th>MRP Price</th>
                                            <th>Purchase Price</th>

                                            <th>Discount Price</th>

                                            <th>Profit Margin</th>
                                            <th>SalePrice</th>
                                            <th>CGST</th>
                                            <th>SGST</th>
                                            <th>IGST</th>
                                            <th>B2B Profit</th>
                                            <th>B2b Sale Price</th>
                                            <th>Updated On</th>

</thead>
                                    <tbody>
                                        @if(ViewBag.ProductList != null)
                                        {
                                            foreach (System.Data.DataRow drclient in ViewBag.ProductList.Rows)
                                            {
                                        <tr>
                                            <td>@(rowNo += 1)</td>
                                            <td>@drclient["ProductName"]</td>
                                            <td>@drclient["Name"]</td>
                                            <td>@drclient["MRPPrice"]</td>
                                            <td>@drclient["PurchasePrice"]</td>
                                            <td>@drclient["DiscountPrice"]</td>
                                            <td>@drclient["Profit"]</td>
                                            <td>@drclient["SellPrice"]</td>
                                            <td>@drclient["CGST"]</td>
                                            <td>@drclient["SGST"]</td>
                                            <td>@drclient["IGST"]</td>
                                            <td>@drclient["B2BProfit"]</td>
                                            <td>@drclient["B2BSellPrice"]</td>
                                            <td>@drclient["Updated"]</td>

                                        </tr>
                                              
                                            }
                                        }
                                       
                                        </tbody>


                                </table>
                            </div>
                            </div>
                        </div>
                </div>
            </div>
        </section>

    }

