
@model MilkWayIndia.Entity.tbl_Attributes


<div id="ModalPopUp" class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            <h5 class="modal-title">Add / Edit Attribute</h5>
        </div>
        @using (Ajax.BeginForm("Create", "Attribute", null, new AjaxOptions { OnSuccess = "SuccessAttribute" }, new { @id = "frmAttribute" }))
        {
            @Html.HiddenFor(model => model.ID)
            <div class="modal-body">
                <div id="Modelmessage"></div>
                <div class="form-group small">
                    <label class="form-control-label"> Name</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Name", @required = "required", autocomplete = "off" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" name="submit" value="save" class="btn btn-success">Save</button>
                <button type="submit" name="submit" class="btn btn-danger" data-dismiss="modal"><span class="button-inner">Close</span></button>
            </div>
        }
    </div>
</div>
