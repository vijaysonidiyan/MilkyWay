@model MilkWayIndia.Models.BillPayCircleVM

<div id="ModalPopUp" class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            <h4 class="modal-title">@ViewBag.ModelTitle</h4>
        </div>
        @using (Ajax.BeginForm("AddCity", "billpay", null, new AjaxOptions { OnSuccess = "SuccessCity" }, new { @id = "frmCity" }))
        {
            @Html.HiddenFor(s => s.ID)
            <div class="modal-body">
                <div class="form-group">
                    <label>City Name <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span></label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "City Name", @required = "required" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" name="state" value="Save" class="btn btn-success btn-sm pull-left" onclick="return ValidateCityName();"> Save </button>
                <button type="button" class="btn btn-secondary btn-sm pull-left" data-dismiss="modal"> Close </button>
            </div>
        }
    </div>
</div>
<script>
    function ValidateCityName() {
        var Name = $('#Name').val();
        $('input').removeClass('field-error');
        $('#frmCity span').text('');
        if (Name == null || Name == "") {
            $('#Name').addClass('field-error');
            return false;
        }
    }
</script>