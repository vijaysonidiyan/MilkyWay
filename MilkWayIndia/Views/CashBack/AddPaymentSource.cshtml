
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@model MilkWayIndia.Models.CashBack
@section contain
{
    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiProduct");
            if (MasterClass != null) {
                MasterClass.className = MasterClass.className + " active";
            }
        });
    </script>
    <section class="content-header">
        <h1>
            Add PaymentSource
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Product</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="btn-group-vertical">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("PaymentSourceList", "CashBack")'">Back To List</button>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("AddPaymentSourceNew", "Cashback", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="SuccessMsg" style="color: red">@ViewBag.SuccessMsg</div>
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="PaymentSource" class="col-sm-3 control-label">Payment Source</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.PaymentSource, new { @class = "form-control", @id = "PaymentSource" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Is Active</label>
                                            <div class="col-sm-5">
                                                @Html.CheckBox("IsActive", new { @checked = "checked" })
                                            </div>
                                        </div>


                                    </div>
                                 
                                </div>
                            </div>
                        </div>
                        <div class="box-footer text-right">
                            @*<input type="button" class="btn btn-orange" value="Cancel" />*@
                            <input type="submit" value="Save" class="btn btn-primary" onclick="return ValidProduct();" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    
}
