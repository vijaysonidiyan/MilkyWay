@model MilkWayIndia.Models.Chatbot
@{
    ViewBag.Title = "AddChatbot";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section contain
{


    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <script src="~/Content/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiMst");
            if (MasterClass != null) {
                MasterClass.className = MasterClass.className + " active";
            }
        });
    </script>
    <script>
        $(function () {
            $(".select2").select2();
        });
    </script>


    <section class="content-header">
        <h1>
            Add Chatbot Query
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Chatbot Query</li>
        </ol>
    </section>



    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="btn-group-vertical">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("ChatbotList", "Chatbot")'">Back To Panel</button>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("AddChatbot", "Chatbot", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">

                                <div id="SuccessMsg" style="color: red">@ViewBag.SuccessMsg</div>


                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Query</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.Chatbotquery, new { @class = "form-control", @id = "Chatbotquery" })
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot General Reply</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.ChatbotGeneralReply, new { @class = "form-control", @id = "ChatbotGeneralReply" })
                                    </div>
                                    <label for="inputEmail3" class="col-sm-2 control-label">Display Yes/No</label>
                                    <div class="col-sm-2">


                                        <select id="ddlyesno" name="ddlyesno" class="form-control select2">
                                            <option value="0">---Select---</option>

                                            <option value="1">Yes </option>
                                            <option value="2">No </option>


                                        </select>
                                    </div>




                                </div>




                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Query Yes Reply</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.ChatbotYesReply, new { @class = "form-control", @id = "ChatbotqueryYes" })
                                    </div>
                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Query No Reply</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.ChatbotNoReply, new { @class = "form-control", @id = "ChatbotqueryNo" })
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Category</label>
                                    <div class="col-sm-2">


                                        <select id="ddlcat" name="ddlcat" class="form-control select2">
                                            <option value="0">---Select---</option>

                                            <option value="1">No </option>
                                            <option value="2">Dialouge Box Numeric </option>
                                            <option value="3">Dialouge Box Text </option>

                                        </select>
                                    </div>
                                </div>



                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Sort Order</label>
                                    <div class="col-sm-2">


                                        @Html.TextBoxFor(m => m.SortOrder, new { @class = "form-control", @id = "SortOrder" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="box-header with-border">
                                   
                                    <span style="font-family:Verdana;font-weight:bold;font-size:18px;"> Next Level Chatbot Query For Yes option</span>
                                </div>
                              


                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Query</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.ChatbotQue2Yes, new { @class = "form-control", @id = "ChatbotQue2Yes" })
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot General Reply</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.Chatbot2GeneralReply, new { @class = "form-control", @id = "Chatbot2GeneralReply" })
                                    </div>
                                    <label for="inputEmail3" class="col-sm-2 control-label">Display Yes/No</label>
                                    <div class="col-sm-2">


                                        <select id="ddlyesno2" name="ddlyesno2" class="form-control select2">
                                            <option value="0">---Select---</option>

                                            <option value="1">Yes </option>
                                            <option value="2">No </option>


                                        </select>
                                    </div>




                                </div>




                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Query Yes Reply</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.Chatbot2YesReply, new { @class = "form-control", @id = "Chatbot2YesReply" })
                                    </div>
                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Query No Reply</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.Chatbot2NoReply, new { @class = "form-control", @id = "Chatbot2NoReply" })
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Category</label>
                                    <div class="col-sm-2">


                                        <select id="ddlcat2" name="ddlcat2" class="form-control select2">
                                            <option value="0">---Select---</option>

                                            <option value="1">No </option>
                                            <option value="2">Dialouge Box Numeric </option>
                                            <option value="3">Dialouge Box Text </option>

                                        </select>
                                    </div>
                                </div>



                            </div>
                        </div>


                        <hr />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="box-header with-border">

                                    <span style="font-family:Verdana;font-weight:bold;font-size:18px;"> Next Level Chatbot Query For No option</span>
                                </div>
                               


                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Query</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.ChatbotQue3No, new { @class = "form-control", @id = "ChatbotQue3No" })
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot General Reply</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.Chatbot3GeneralReply, new { @class = "form-control", @id = "Chatbot3GeneralReply" })
                                    </div>
                                    <label for="inputEmail3" class="col-sm-2 control-label">Display Yes/No</label>
                                    <div class="col-sm-2">


                                        <select id="ddlyesno3" name="ddlyesno3" class="form-control select2">
                                            <option value="0">---Select---</option>

                                            <option value="1">Yes </option>
                                            <option value="2">No </option>


                                        </select>
                                    </div>




                                </div>




                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Query Yes Reply</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.Chatbot3YesReply, new { @class = "form-control", @id = "Chatbot3YesReply" })
                                    </div>
                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Query No Reply</label>
                                    <div class="col-sm-2">


                                        @Html.TextAreaFor(m => m.Chatbot3NoReply, new { @class = "form-control", @id = "Chatbot3NoReply" })
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Chatbot Category</label>
                                    <div class="col-sm-2">


                                        <select id="ddlcat3" name="ddlcat3" class="form-control select2">
                                            <option value="0">---Select---</option>

                                            <option value="1">No </option>
                                            <option value="2">Dialouge Box Numeric </option>
                                            <option value="3">Dialouge Box Text </option>

                                        </select>
                                    </div>
                                </div>



                            </div>
                        </div>
                    </div>
                        <div class="box-footer text-right">
                            @*<input type="button" class="btn btn-orange" value="Cancel" />*@
                            <input type="submit" value="Save" class="btn btn-primary" onclick="return ValidPlatform();" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <script>

        function ValidPlatform() {
            var status = true;


            var FirstName = document.getElementById("Platform").value;
            if (FirstName == null || FirstName == "" || FirstName == "Please Enter Platform") {
                document.getElementById("Platform").style.border = "1px solid #ff0000";
                document.getElementById("Platform").style.color = "#ff0000";
                document.getElementById("Platform").value = "Please Enter Platform";
                status = false;
                return false;
            }




        }


    </script>
}
}

