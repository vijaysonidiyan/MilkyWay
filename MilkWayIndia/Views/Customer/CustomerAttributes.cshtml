@model MilkWayIndia.Models.Staff
@{
    ViewBag.Title = "CustomerAttributes";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section contain
{

    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <script src="~/Content/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiMst");
            if (MasterClass != null) {
                MasterClass.className = MasterClass.className + " active";
            }
        });
    </script>
    <style>
        .select2-container--default .select2-selection--single {
            border: 1px solid #d2d6de;
            border-radius: 0px;
        }

        .select2-container .select2-selection--single {
            height: 33px;
        }
    </style>
    <script>
        $(function () {
            $(".select2").select2();
        });
    </script>
    <section class="content-header">
        <h1>
            Edit Customer Order Attributes
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Customer Order Attributes</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="col-md-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="btn-group-vertical">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("CustomerList", "Customer")'">Back To Panel</button>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("CustomerAttributes", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">

                                <div id="SuccessMsg" style="color: red">@ViewBag.SuccessMsg</div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">FirstName</label>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @id = "FirstName", @Value = ViewBag.FirstName })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">LastName</label>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(m => m.LastName, new { placeholder = "", @id = "LastName", @class = "form-control", onClick = "ClearTextbox('LastName')", @Value = ViewBag.LastName })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Delivery Manager</label>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(m => m.StaffName, new { placeholder = "", @id = "StaffName", @class = "form-control", @Value = ViewBag.StaffName })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Produt</label>
                                    <div class="col-sm-6">
                                        <select id="ddlProduct" name="ddlProduct" class="form-control select2">
                                            <option value="0">---Select---</option>
                                            @if (ViewBag.Sector != null)
                                            {
                                                foreach (System.Data.DataRow drSectorName in ViewBag.Sector.Rows)
                                                {
                                                    <option value="@drSectorName["Id"]">@drSectorName["SectorName"]</option>
                                                }
                                            }
                                        </select>
                                        <script>
                                                document.getElementById('ddlProduct').value = '@ViewBag.SectorId';
                                        </script>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Attribute</label>
                                    <div class="col-sm-6">
                                        <select id="ddlAttribute" name="ddlAttribute" class="form-control select2">
                                            <option value="0">---Select---</option>
                                            @if (ViewBag.Sector != null)
                                            {
                                                foreach (System.Data.DataRow drSectorName in ViewBag.Sector.Rows)
                                                {
                                                    <option value="@drSectorName["Id"]">@drSectorName["SectorName"]</option>
                                                }
                                            }
                                        </select>
                                        <script>
                                                document.getElementById('ddlAttribute').value = '@ViewBag.SectorId';
                                        </script>
                                    </div>
                                </div>





                            </div>
                        </div>


                        <hr />
                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">State</label>
                                    <div class="col-sm-6">
                                        <select id="ddlstate" name="ddlstate" class="form-control select2">
                                            <option value="0">---Select---</option>
                                            @if (ViewBag.Sector != null)
                                            {
                                                foreach (System.Data.DataRow drSectorName in ViewBag.Sector.Rows)
                                                {
                                                    <option value="@drSectorName["Id"]">@drSectorName["SectorName"]</option>
                                                }
                                            }
                                        </select>
                                        <script>
                                                document.getElementById('ddlSector').value = '@ViewBag.SectorId';
                                        </script>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">City</label>
                                    <div class="col-sm-6">
                                        <select id="ddlcity" name="ddlcity" class="form-control select2">
                                            <option value="0">---Select---</option>
                                            @if (ViewBag.Sector != null)
                                            {
                                                foreach (System.Data.DataRow drSectorName in ViewBag.Sector.Rows)
                                                {
                                                    <option value="@drSectorName["Id"]">@drSectorName["SectorName"]</option>
                                                }
                                            }
                                        </select>
                                        <script>
                                                document.getElementById('ddlSector').value = '@ViewBag.SectorId';
                                        </script>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Sector</label>
                                    <div class="col-sm-6">
                                        <select id="ddlSector" name="ddlSector" class="form-control select2">
                                            <option value="0">---Select---</option>
                                            @if (ViewBag.Sector != null)
                                            {
                                                foreach (System.Data.DataRow drSectorName in ViewBag.Sector.Rows)
                                                {
                                                    <option value="@drSectorName["Id"]">@drSectorName["SectorName"]</option>
                                                }
                                            }
                                        </select>
                                        <script>
                                                document.getElementById('ddlSector').value = '@ViewBag.SectorId';
                                        </script>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Select DM</label>
                                    <div class="col-sm-6">
                                        <select id="ddldm" name="ddldm" class="form-control select2">
                                            <option value="0">---Select---</option>
                                            @if (ViewBag.Sector != null)
                                            {
                                                foreach (System.Data.DataRow drSectorName in ViewBag.Sector.Rows)
                                                {
                                                    <option value="@drSectorName["Id"]">@drSectorName["SectorName"]</option>
                                                }
                                            }
                                        </select>
                                        <script>
                                            document.getElementById('ddldm').value = '@ViewBag.SectorId';
                                        </script>
                                    </div>
                                </div>
                            </div>
                            </div>

                            </div>
                            <div class="box-footer text-right">
                                @*<input type="button" class="btn btn-orange" value="Cancel" />*@
                                <input type="submit" value="Save" class="btn btn-primary" onclick="return ValidCustomer();" />
                            </div>
                            }
                        </div>
                    </div>
        </div>
    </section>
}
