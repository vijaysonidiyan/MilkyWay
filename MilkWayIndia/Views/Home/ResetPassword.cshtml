@model MilkWayIndia.Models.Staff
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Reset Password | MilkyWayIndia</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css" />
    <link href="~/Content/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/iCheck/square/blue.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>MilkyWayIndia</b></a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Reset your password</p>

            @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.UsernameOrEmail)

                <div id="SuccessMsg" class="text-success">@ViewBag.SuccessMessage</div>
                <div id="ErrorMsg" class="text-danger">@ViewBag.ErrorMessage</div>

                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.NewPassword, new { placeholder = "New Password", @class = "form-control", @id = "NewPassword" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control", @id = "ConfirmPassword" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-12 text-right">
                        <input type="submit" value="Reset Password" class="btn btn-primary" />
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-12 text-center">
                        <a href="@Url.Action("Login", "Home")" style="font-size: 13px; color: #337ab7;">Back to Login</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>
