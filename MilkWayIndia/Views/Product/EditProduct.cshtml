@model MilkWayIndia.Models.Product
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@section contain
{
    <link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <script src="~/Content/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiProduct");
            if (MasterClass != null) {
                MasterClass.className = MasterClass.className + " active";
            }
        });
    </script>

    <section class="content-header">
        <h1>
            Edit Product
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Product</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="btn-group-vertical">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("ProductList", "Product")'">Back To List</button>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("EditProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="SuccessMsg" style="color: red">@ViewBag.SuccessMsg</div>
                                    @*@Html.HiddenFor(m => m.Id, new { @Value = ViewBag.ProductId })*@
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Category</label>
                                            <div class="col-sm-6">
                                                <select id="ddlCategory" name="ddlCategory" class="form-control">
                                                    <option value="0">---Select---</option>
                                                    @if (ViewBag.Category != null)
                                                    {
                                                        foreach (System.Data.DataRow drCategoryName in ViewBag.Category.Rows)
                                                        {
                                                            <option value="@drCategoryName["Id"]">@drCategoryName["CategoryName"]</option>
                                                        }
                                                    }
                                                </select>
                                                <script type="text/javascript">
                                                    document.getElementById('ddlCategory').value = "@ViewBag.MainCategoryId"
                                                </script>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Sub Category</label>
                                            <div class="col-sm-6">
                                                <select id="ddlSubCategory" name="ddlSubCategory" class="form-control"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="ProductName" class="col-sm-3 control-label">Product</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @id = "ProductName", @Value = ViewBag.ProductName })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Code</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @id = "Code", @Value = ViewBag.Code })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Order By</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.OrderBy, new { @class = "form-control", @id = "OrderBy", onkeypress = "return ValidateNumber(event);", @Value = ViewBag.OrderBy })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Reward Point</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.RewardPoint, new { @class = "form-control", @id = "RewardPoint", @Value = ViewBag.RewardPoint, onkeypress = "return ValidateNumber(event);" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">MRP Price</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @id = "Price", @Value = ViewBag.Price, onkeypress = "return ValidateNumber(event);" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Purchase Price</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.PurchaseAmount, new { @class = "form-control", @id = "PurchaseAmount", onkeypress = "return ValidateNumber(event);", @Value = ViewBag.PurchaseAmount })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Discount Price</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.DiscountAmount, new { @class = "form-control", @id = "DiscountAmount", @Value = ViewBag.DiscountAmount, onkeypress = "return ValidateNumber(event);" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">CGST (%)</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.CGST, new { @class = "form-control", @id = "CGST", @Value = ViewBag.CGST, onkeypress = "return ValidateNumber(event);" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">SGST (%)</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.SGST, new { @class = "form-control", @id = "SGST", @Value = ViewBag.SGST, onkeypress = "return ValidateNumber(event);" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">IGST (%)</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.IGST, new { @class = "form-control", @id = "IGST", @Value = ViewBag.IGST, onkeypress = "return ValidateNumber(event);", onchange = "CalculateSaleAmt();" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Profit / Margin</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.Profit, new { @class = "form-control", @id = "Profit", onkeypress = "return ValidateNumber(event);", @Value = ViewBag.Profit })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Sale Price</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.SaleAmount, new { @class = "form-control", @id = "SaleAmount", onkeypress = "return ValidateNumber(event);", @Value = ViewBag.SaleAmount })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Detail</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.Detail, new { @class = "form-control", @id = "Detail", @Value = ViewBag.Detail })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Subscription</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.Subscription, new { @class = "form-control", onkeypress = "return ValidateNumber(event);", @Value = ViewBag.Subscription })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Youtube Title</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.YoutubeTitle, new { @class = "form-control", @id = "Youtube Title", @Value = ViewBag.YoutubeTitle })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Youtube URL</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.YoutubeURL, new { @class = "form-control", @id = "Youtube URL", @Value = ViewBag.YoutubeURL })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Is Daily</label>
                                            <div class="col-sm-5">
                                                @if (Convert.ToBoolean(ViewBag.Daily) == true)
                                                {
                                                    <input type="checkbox" class="Checked" id="IsDaily" name="IsDaily" checked />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" class="Checked" id="IsDaily" name="IsDaily" />
                                                }
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Is Alternate</label>
                                            <div class="col-sm-5">
                                                @if (Convert.ToBoolean(ViewBag.Alternate) == true)
                                                {
                                                    <input type="checkbox" class="Checked" id="IsAlternate" name="IsAlternate" checked />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" class="Checked" id="IsAlternate" name="IsAlternate" />
                                                }
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Is Multiple</label>
                                            <div class="col-sm-5">
                                                @if (Convert.ToBoolean(ViewBag.Multiple) == true)
                                                {
                                                    <input type="checkbox" class="Checked" id="IsMultiple" name="IsMultiple" checked />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" class="Checked" id="IsMultiple" name="IsMultiple" />
                                                }
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Is WeekDay</label>
                                            <div class="col-sm-5">
                                                @if (Convert.ToBoolean(ViewBag.WeeklyDay) == true)
                                                {
                                                    <input type="checkbox" class="Checked" id="IsWeekDay" name="IsWeekDay" checked />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" class="Checked" id="IsWeekDay" name="IsWeekDay" />
                                                }
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Is Active</label>
                                            <div class="col-sm-5">
                                                @if (Convert.ToBoolean(ViewBag.Active) == true)
                                                {<input type="checkbox" class="Checked" id="IsActive" name="IsActive" checked />
                                                }
                                                else
                                                {
                                                    @Html.CheckBox("IsActive", new { @class = "Checked" })
                                                }
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Image</label>
                                            <div class="col-sm-6">
                                                <input type="file" name="Document1" id="Document1" />
                                                <span>Size: 300px * 300px</span><br />

                                                @if (!string.IsNullOrEmpty(ViewBag.MainImage))
                                                {
                                                    <div class="form-group has-feedback" id="imgicon">
                                                        <img src="~/image/product/@ViewBag.MainImage" height="100" width="100" onClick="window.open(this.src);" />
                                                        <p><strong>File Name:</strong> @ViewBag.MainImage</p>
                                                    </div>
                                                }
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Other Images</label>
                                            <div class="col-sm-6">
                                                <input type="file" name="photos" id="photos" multiple />
                                                <span>Size: 300px * 300px</span><br />

                                                @if (!string.IsNullOrEmpty(ViewBag.Image))
                                                {
                                                    <div class="form-group has-feedback" id="imgicon">
                                                        <img src="~/image/product/@ViewBag.Image" height="100" width="100" onClick="window.open(this.src);" />
                                                        <p><strong>File Name:</strong> @ViewBag.Image</p>
                                                    </div>
                                                }
                                            </div>
                                        </div>






                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Effective Date</label>
                                            <div class="col-sm-6">
                                                @Html.TextBox("datepicker", "", new
                                       {
                                           placeholder = "From Date",
                                           @class = "form-control",
                                           @Value = ViewBag.EffectiveDate,
                                           autocomplete = "off"
                                       })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer text-right">
                                @*<input type="button" class="btn btn-orange" value="Cancel" />*@
                                <input type="submit" value="Save" class="btn btn-primary" onclick="return ValidProduct();" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>



    <script>

        $(document).ready(function () {
            $('#datepicker').datepicker({
                "setDate": new Date(),
                "autoclose": true,
                format: 'dd/mm/yyyy',
                todayHighlight: true,
                defaultDate: new Date(),
            });

        });


    </script>
    <script>
        function ValidProduct() {
            var status = true;


            var FromDate = $('#datepicker').val();
            if (FromDate == "" || FromDate == null) {

                document.getElementById('datepicker').style.border = "1px solid #ff0000";

                status = false;
            }
            else {
                document.getElementById('datepicker').style.border = "";
            }


            var Category = document.getElementById("ddlCategory").value;
            if (Category == null || Category == "" || Category == "0") {
                document.getElementById("ddlCategory").style.border = "1px solid #ff0000";
                document.getElementById("ddlCategory").style.color = "#ff0000";
                document.getElementById("ddlCategory").value = "0";
                status = false;
                return false;
            }
            var product = document.getElementById("ProductName").value;
            if (product == null || product == "" || product == "Please Enter Product") {
                document.getElementById("ProductName").style.border = "1px solid #ff0000";
                document.getElementById("ProductName").style.color = "#ff0000";
                document.getElementById("ProductName").value = "Please Enter Product";
                status = false;
                return false;
            }
            var Price = document.getElementById("Price").value;
            if (Price == null || Price == "" || Price == "Please Enter Price") {
                document.getElementById("Price").style.border = "1px solid #ff0000";
                document.getElementById("Price").style.color = "#ff0000";
                document.getElementById("Price").value = "Please Enter Price";
                status = false;
                return false;
            }
        }
        function CalculateSaleAmt() {
            var MRP = document.getElementById("Price").value;
            var Purchase = document.getElementById("PurchaseAmount").value;
            var discount = document.getElementById("DiscountAmount").value;
            var price = (parseFloat(MRP) - parseFloat(Purchase)) - parseFloat(discount);
            var TotalPrice = parseFloat(Purchase) + parseFloat(price);

            var igst = document.getElementById("IGST").value;
            var gstprice = (parseFloat(TotalPrice) * parseFloat(igst)) / 100;

            var profit = parseFloat(price) - parseFloat(gstprice);
            document.getElementById("Profit").value = profit;

            var saleprice = parseFloat(profit) + parseFloat(gstprice) + parseFloat(Purchase);
            document.getElementById("SaleAmount").value = saleprice;

        }
        //function ValidateNumber(e) {

        //    var keycode = (e.which) ? e.which : e.keyCode;
        //    //console.log(keycode);
        //    var phn = document.getElementById('MobileNo');
        //    //comparing pressed keycodes
        //    if (!(keycode == 8 || keycode == 46) && (keycode < 48 || keycode > 57)) {
        //        return false;
        //    }
        //    return true;
        //};

        function setSubCategory() {
            var catid = $('#ddlCategory').val();
            var URL = '/product/GetSubCategory?CategoryId=' + catid;
            $('#ddlSubCategory').html('');
            $.getJSON(URL, function (data) {
                $('#ddlSubCategory').html(data);
                document.getElementById('ddlSubCategory').value = @ViewBag.CategoryId;
            });
        }

        $(document).ready(function () {
            setSubCategory();
            $('#ddlCategory').change(function () {
                setSubCategory();
            });
        });
    </script>

}






