                if (cbox.type == "checkbox") {
                    cbox.checked = cb.checked;
                }


            }

            if (cb.checked == false) {
                document.getElementById("txtstatus").value = "0";
            }

            if (cb.checked == true) {
                document.getElementById("txtstatus").value = "1";
            }
