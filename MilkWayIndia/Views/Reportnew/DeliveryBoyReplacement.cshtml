    <script>
        function SuccessCategory(data) {
            if (data.success == "1") {
                $('#SuccessMsg').html('Successfully Update Successfully.')
                $('#tblExistingDetails tbody').html('');
                //$('#ddlCategory').val('0');
                //$('#ddlSubCategory').val('0');
