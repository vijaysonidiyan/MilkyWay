<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-body">
                <div class="box-body table-responsive no-padding">
                    <table id="example1" class="table table-bordered table-striped">
                        @{int rowNo = 0;}
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Staff Name</th>
                                <th>Category</th>
                              
                                <th>Role</th>
                                <th>View</th>
                                <th>Add</th>
                                <th>Edit</th>
                                <th>Delete</th>
                                <th>Manage Fund</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (System.Data.DataRow drclient in ViewBag.ValidationList.Rows)
                            {
                            <tr>
                                <td>@(rowNo += 1)</td>
                                <td>@drclient["FirstName"] @drclient["LastName"]</td>
                                <td>@drclient["Category"] </td>
                                <td>@drclient["RoleName"]</td>

                                <td>@drclient["IsView"] </td>
                                <td>@drclient["IsAdd"]</td>
                                <td>@drclient["IsEdit"]</td>
                                <td>@drclient["IsDelete"]</td>
                                <td>@drclient["IsmanageFund"]</td>
                                <td><a href="/Staff/EditUserValidation/@drclient["Id"]"><i class="fa fa-edit"></i></a></td>
                                <td><a href="/Staff/DeleteUserValidation/@drclient["Id"]" , onclick="return confirm('Are you sure you want to delete this Data?');"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
                //  $(function () {
                $('#example1').DataTable({
                    "paging": true,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": false
                });
                //  });


</script>
