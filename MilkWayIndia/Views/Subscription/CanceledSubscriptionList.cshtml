
@{
    ViewBag.Title = "CanceledSubscriptionList";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section contain
{
    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script>
    $(document).ready(function () {
        var MasterClass = document.getElementById("LiSubscri");
        if (MasterClass != null) {
            MasterClass.className = MasterClass.className + " active";

        }
    });
    </script>
    <section class="content-header">
        @if (@TempData["error"] != null)
        {
            <script type="text/javascript">
                            alert("@TempData["error"]");
            </script>
        }
        <div class="box-header with-border">
            <h3 class="box-title">Canceled Subscription List</h3>
            <div class="box-tools">
                <div class="input-group input-group-sm pull-right">
                    @*<asp:LinkButton runat="server" ID="lbtnAdd" class="btn btn-default pull-right btn-add" PostBackUrl="~/.aspx">Back</asp:LinkButton>*@
                    <input type="button" class="btn btn-primary pull-right btn-add" style="width:200px" value="Cancel Subscription" onclick="location.href='@Url.Action("CancelSubscription", "Subscription")'" />
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <div class="btn-group-vertical">
                            <div class="form-group has-feedback">
                                <input type="submit" id="btnlbprint" value="Print" class="btn btn-success btn-block" onclick="pdfcanSub()" />
                            </div>
                        </div>
                        <div class="box-body table-responsive no-padding">
                            <table id="example1" class="table table-bordered table-striped">
                                @{int rowNo = 0;}
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>From Date</th>
                                        <th>To Date</th>
                                        <th>Total Refund</th>
                                        <th></th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (System.Data.DataRow drclient in ViewBag.cansub.Rows)
                                    {
                                        <tr>
                                            <td>@(rowNo += 1)</td>
                                            <td>@drclient["FirstName"] @drclient["LastName"]</td>
                                            <td>@drclient["cancelFD1"]</td>
                                            <td>@drclient["cancelTD1"]</td>
                                            <td>@drclient["Refund"]</td>
                                            <td><a href="/Subscription/DeleteCanceledSubscription/@drclient["Id"]" , onclick="return confirm('Are you sure you want to delete this Data?');"><i class="fa fa-trash-o"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @*@Html.Partial("_PagingSortingSearchingJSPartial")*@
    <script>
    $(function () {

        $('#example1').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
    </script>
    <script>
        function pdfcanSub() {

           
            $.ajaxSetup({ async: false });
            var urlInsert = '/Subscription/CanceledSubPrint';
            window.location = urlInsert;
        }
    </script>

}

