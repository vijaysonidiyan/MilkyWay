@model MilkWayIndia.Models.Terms
@{
    ViewBag.Title = "EditTerms";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section contain
{

    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <script src="~/Content/plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- bootstrap wysihtml5 - text editor -->
    <link href="~/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiMst");
            if (MasterClass != null) {
                MasterClass.className = MasterClass.className + " active";
            }
        });
    </script>
    <script>
        $(function () {
            $(".select2").select2();
        });
    </script>


    <section class="content-header">
        <h1>
            Update Terms and Condition
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Terms and Condition</li>
        </ol>
    </section>



    <!-- Main content -->
    <section class="content">
        <div class="col-md-9">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="btn-group-vertical">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("TermsList", "Terms")'">Back To Panel</button>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("EditTerms", "Terms", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">

                                    <div id="SuccessMsg" style="color: red">@ViewBag.SuccessMsg</div>


                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Possition</label>
                                        <div class="col-sm-6">


                                            @Html.TextBoxFor(m => m.Pos, new { @class = "form-control", @id = "Pos", @type = "number" })
                                        </div>
                                    </div>







                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Description</label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(m => m.terms, new { @class = "form-control textarea", rows = "8" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer text-right">
                            @*<input type="button" class="btn btn-orange" value="Cancel" />*@
                            <input type="submit" value="Save" class="btn btn-primary" onclick="return ValidPlatform();" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <script>

        function ValidPlatform() {
            var status = true;


            var FirstName = document.getElementById("Platform").value;
            if (FirstName == null || FirstName == "" || FirstName == "Please Enter Platform") {
                document.getElementById("Platform").style.border = "1px solid #ff0000";
                document.getElementById("Platform").style.color = "#ff0000";
                document.getElementById("Platform").value = "Please Enter Platform";
                status = false;
                return false;
            }




        }


    </script>

    <script src="~/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script>
        $(function () {
            $('.textarea').wysihtml5()
        })
    </script>
}

