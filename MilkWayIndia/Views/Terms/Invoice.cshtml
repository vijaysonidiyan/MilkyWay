            background-size: contain;
        }

        .main-contain {
            background-color: #fff;
            padding: 15px;
        }

        .main-box table {
            width: 100%;
            line-height: inherit;
            text-align: left;
        }

            .main-box table td, .main-box table th {
                padding: 3px;
                vertical-align: top;
                padding-left: 10px;
                font-size: 18px;
            }

            .main-box table tr.top table td {
                padding-bottom: 20px;
            }

                .main-box table tr.top table td.title {
                    font-size: 45px;
                    line-height: 45px;
                    color: #333;
                }

            .main-box table tr.information table td {
                padding-bottom: 40px;
            }

            .main-box table tr.heading td {
                background: #eee;
                border-bottom: 1px solid #ddd;
                font-weight: bold;
            }

            .main-box table tr.details td {
                padding-bottom: 20px;
            }

            .main-box table tr.item td {
                border-bottom: 1px solid #eee;
            }

            .main-box table tr.item.last td {
                border-bottom: none;
            }

        .no-border td {
            border: 0px !important;
            padding: 0px !important;
        }

        .main-box table tr.total td:nth-child(2) {
            border-top: 2px solid #eee;
            font-weight: bold;
        }

        .main-box table.score td, .main-box table.score th {
            border-top: 1px solid #000;
            border-left: 1px solid #000;
            text-align: left;
        }

            .main-box table.score td:last-child, .main-box table.score th:last-child {
                border-right: 1px solid #000;
            }

        .main-box table.score tr:last-child td {
            border-bottom: 1px solid #000;
        }

        .main-box .h3 {
            font-size: 18px;
            font-weight: bold;
            padding: 0px;
        }

            .main-box .h3 span {
                font-size: 12px;
                font-weight: normal;
            }

        .main-box .head {
            padding: 0px 7em;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
        }

        .main-box .subhead {
            padding: 0px 7em;
            text-align: center;
            font-size: 12px;
        }

        .information {
            margin-top: 30px;
            padding: 0px 2em;
        }

        .qty {
            text-align: center !important;
        }

        .score {
            margin-top: 30px;
            padding: 0px 0em;
        }

        .information ol li {
            padding: 5px 0px;
        }

        .bb {
            border-bottom: 1px dotted #000;
        }

        .pt20 {
            padding-top: 20px !important;
        }

        .p20 {
            padding: 10px 20px !important;
        }

        .information p {
            text-align: left;
            padding: 10px;
        }

        .information span {
