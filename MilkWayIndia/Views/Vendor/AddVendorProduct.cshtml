@model MilkWayIndia.Models.Vendor
@{
    ViewBag.Title = "AddVendorProduct";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section contain
{
    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiProduct");
            if (MasterClass != null) {
                MasterClass.className = MasterClass.className + " active";
            }
        });
    </script>

    <section class="content-header">
        <h1>
            Add Product
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Product</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="btn-group-vertical">
                        
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("ProductList", "Product")'">Back To List</button>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>



                <div class="form-horizontal">
                    @using (Html.BeginForm("AddVendorProduct", "Vendor", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(m => m.VendorId, new { @class = "form-control", @id = "VendorId", @Value = ViewBag.VendorId })
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="SuccessMsg" style="color: red">@ViewBag.SuccessMsg</div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="ProductName" class="col-sm-3 control-label">Product</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @id = "ProductName" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Order By</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.SortOrder, new { @class = "form-control", @id = "SortOrder", onkeypress = "return ValidateNumber(event);" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Sale Price</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.SellPrice, new { @class = "form-control", @id = "SellPrice", onkeypress = "return ValidateNumber(event);" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">CGST (%)</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.CGST, new { @class = "form-control", @id = "CGST", onkeypress = "return ValidateNumber(event);" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">SGST (%)</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.SGST, new { @class = "form-control", @id = "SGST", onkeypress = "return ValidateNumber(event);" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">IGST (%)</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(m => m.IGST, new { @class = "form-control", @id = "IGST", onkeypress = "return ValidateNumber(event);", onchange = "CalculateSaleAmt();" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Detail</label>
                                            <div class="col-sm-6">
                                                @Html.TextAreaFor(m => m.Detail, new { @class = "form-control", @id = "Detail" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label"> Image</label>
                                            <div class="col-sm-6">
                                                <input type="file" name="Document1" id="Document1" required />
                                                <span>Size : 300px * 300px</span><br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="box-footer text-right">
                            @*<input type="button" class="btn btn-orange" value="Cancel" />*@
                            <input type="submit" value="Save" class="btn btn-primary" onclick="return ValidProduct();" />
                        </div>

                    }
                </div>
            </div>
        </div>
</section>
}

