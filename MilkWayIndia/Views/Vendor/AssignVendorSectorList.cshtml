
@{
    ViewBag.Title = "AssignVendorSectorList";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section contain
{
    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiMst");
            if (MasterClass != null) {
                MasterClass.className = MasterClass.className + " active";

            }
        });
    </script>

    <section class="content-header">
        @if (@TempData["error"] != null)
        {
            <script type="text/javascript">
                alert("@TempData["error"]");
            </script>
        }


        <div class="box-header with-border">
            <h3 class="box-title">Vendor Assign List</h3>
            <div class="box-tools">
                <div class="input-group input-group-sm pull-right">
                    @*<asp:LinkButton runat="server" ID="lbtnAdd" class="btn btn-default pull-right btn-add" PostBackUrl="~/.aspx">Back</asp:LinkButton>*@
                    @if (ViewBag.IsAdd == true)
                    {
                        <input type="button" class="btn btn-primary pull-right btn-add" value="Add" onclick="location.href='@Url.Action("AssignVendorSector", "Vendor")'" />
                    }
                </div>
            </div>
        </div>

    </section>


    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">

                        <div class="box-body table-responsive no-padding">
                            <table id="example1" class="table table-bordered table-striped">
                                @{int rowNo = 0;}
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Vendor Name</th>
                                        <th>State/City/Sector </th>
                                       
                                        @*<td></td>*@
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @Html.Raw(ViewBag.VendorSectorList)
                                    @*@foreach (System.Data.DataRow drclient in ViewBag.VendorAssignList.Rows)
        {
        <tr>
            <td>@(rowNo += 1)</td>
            <td>@drclient["FirstName"] @drclient["LastName"]</td>
            <td>@drclient["statename"]</td>
            <td>@drclient["Cityname"]</td>
            <td>@drclient["SectorName"]</td>


            <td><a href="/Vendor/DeleteSectorVendorAssign/@drclient["Id"]" , onclick="return confirm('Are you sure you want to delete this Data?');"><i class="fa fa-trash-o"></i></a></td>
        </tr>
        }*@
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>



    <script>
        $(function () {

            $('#example1').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
}

