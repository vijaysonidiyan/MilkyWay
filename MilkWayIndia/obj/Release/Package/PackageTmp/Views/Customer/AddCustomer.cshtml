                                        <label class="col-sm-2 control-label">Password</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.Password, new { placeholder = "", @id = "Password", @class = "form-control", onClick = "ClearTextbox('UserName')" })
                                        </div>
                                    </div>
