
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@model MilkWayIndia.Models.Product
@section contain
{
    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("LiProduct");
            if (MasterClass !=null) {
                MasterClass.className = MasterClass.className + " active";
            }
        });
    </script>
    <section class="content-header">
        <h1>
            Add Product
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Product</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="btn-group-vertical">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("ProductList", "Product")'">Back To List</button>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                    <div id="SuccessMsg" style="color: red">@ViewBag.SuccessMsg</div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Category</label>
                                        <div class="col-sm-6">
                                            @*@Html.TextBoxFor(m => m.CategoryId, new { @class = "form-control", @id = "CategoryId" })*@
                                            <select id="ddlCategory" name="ddlCategory" class="form-control">
                                                <option value="0">---Select---</option>
                                                @if (ViewBag.Category != null)
                                                {
                                                    foreach (System.Data.DataRow drCategoryName in ViewBag.Category.Rows)
                                                    {
                                                        <option value="@drCategoryName["Id"]">@drCategoryName["CategoryName"]</option>
                                                    }
                                                }
                                            </select>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="ProductName" class="col-sm-2 control-label">Product</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @id = "ProductName" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Code</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @id = "Code" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Order By</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.OrderBy, new { @class = "form-control", @id = "OrderBy", onkeypress = "return ValidateNumber(event);" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Reward Point</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.RewardPoint, new { @class = "form-control", @id = "RewardPoint", onkeypress = "return ValidateNumber(event);" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">MRP Price</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @id = "Price", onkeypress = "return ValidateNumber(event);" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Purchase Price</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.PurchaseAmount, new { @class = "form-control", @id = "PurchaseAmount", onkeypress = "return ValidateNumber(event);" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Discount Price</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.DiscountAmount, new { @class = "form-control", @id = "DiscountAmount", onkeypress = "return ValidateNumber(event);" })
                                        </div>
                                    </div>
                                   
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">CGST (%)</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.CGST, new { @class = "form-control", @id = "CGST", onkeypress = "return ValidateNumber(event);" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">SGST (%)</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.SGST, new { @class = "form-control", @id = "SGST", onkeypress = "return ValidateNumber(event);" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">IGST (%)</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.IGST, new { @class = "form-control", @id = "IGST", onkeypress = "return ValidateNumber(event);", onchange ="CalculateSaleAmt();" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Profit / Margin</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.Profit, new { @class = "form-control", @id = "Profit", onkeypress = "return ValidateNumber(event);" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Sale Price</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.SaleAmount, new { @class = "form-control", @id = "SaleAmount", onkeypress = "return ValidateNumber(event);" })
                                        </div>
                                    </div>
                                   
                                   
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Detail</label>
                                        <div class="col-sm-6">
                                            @Html.TextAreaFor(m => m.Detail, new { @class = "form-control", @id = "Detail" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                                        <div class="col-sm-5">
                                            @Html.CheckBox("IsActive", new { @checked = "checked" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Image</label>
                                        <div class="col-sm-6">
                                            <input type="file" name="Document1" id="Document1" required />
                                            <span>Size : 300px * 300px</span><br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer text-right">
                        @*<input type="button" class="btn btn-orange" value="Cancel" />*@
                        <input type="submit" value="Save" class="btn btn-primary" onclick="return ValidProduct();" />
                    </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <script>
        function ValidProduct() {
            var status = true;
            var Category = document.getElementById("ddlCategory").value;
            if (Category == null || Category == "" || Category == "0") {
                document.getElementById("ddlCategory").style.border = "1px solid #ff0000";
                document.getElementById("ddlCategory").style.color = "#ff0000";
                document.getElementById("ddlCategory").value = "0";
                status = false;
                return false;
            }
            var product = document.getElementById("ProductName").value;
            if (product == null || product == "" || product == "Please Enter Product") {
                document.getElementById("ProductName").style.border = "1px solid #ff0000";
                document.getElementById("ProductName").style.color = "#ff0000";
                document.getElementById("ProductName").value = "Please Enter Product";
                status = false;
                return false;
            }
            var Price = document.getElementById("Price").value;
            if (Price == null || Price == "" || Price == "Please Enter Price") {
                document.getElementById("Price").style.border = "1px solid #ff0000";
                document.getElementById("Price").style.color = "#ff0000";
                document.getElementById("Price").value = "Please Enter Price";
                status = false;
                return false;
            }

            var SalePrice = document.getElementById("SaleAmount").value;
            if (SalePrice == null || SalePrice == "" || SalePrice == "Please Enter SalePrice") {
                document.getElementById("SaleAmount").style.border = "1px solid #ff0000";
                document.getElementById("SaleAmount").style.color = "#ff0000";
                document.getElementById("SaleAmount").value = "Please Enter SalePrice";
                status = false;
                return false;
            }

            var profit = document.getElementById("Profit").value;
            if (profit == null || profit == "" || profit == "Please Enter Profit") {
                document.getElementById("Profit").style.border = "1px solid #ff0000";
                document.getElementById("Profit").style.color = "#ff0000";
                document.getElementById("Profit").value = "Please Enter Profit";
                status = false;
                return false;
            }
        }

        function ValidateNumber(e) {

            var keycode = (e.which) ? e.which : e.keyCode;
            //console.log(keycode);
            var phn = document.getElementById('MobileNo');
            //comparing pressed keycodes
            if (!(keycode == 8 || keycode == 46) && (keycode < 48 || keycode > 57)) {
                return false;
            }
            return true;
        };

        function CalculateSaleAmt()
        {
            var MRP = document.getElementById("Price").value;
            var Purchase = document.getElementById("PurchaseAmount").value;
            var discount = document.getElementById("DiscountAmount").value;
            var price = (parseFloat(MRP) - parseFloat(Purchase)) - parseFloat(discount);
            var TotalPrice = parseFloat(Purchase) + parseFloat(price);

            var igst =  document.getElementById("IGST").value;
            var gstprice = (parseFloat(TotalPrice) * parseFloat(igst))/100;

            var profit = parseFloat(price) - parseFloat(gstprice);
            document.getElementById("Profit").value  = profit;

            var saleprice=parseFloat(profit) + parseFloat(gstprice) + parseFloat(Purchase);
            document.getElementById("SaleAmount").value  = saleprice;

        }
    </script>

}
