
@{
    ViewBag.Title = "EditVendor";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@model MilkWayIndia.Models.Vendor
@section contain
{
    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <script src="~/Content/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function () {
            var MasterClass = document.getElementById("ReminderLi");
            if (MasterClass !=null) {
                MasterClass.className = MasterClass.className + " active";
            }
        });
    </script>
    <script>
  $(function () {
    $(".select2").select2();
  });
    </script>
    <section class="content-header">
        <h1>
            Edit Vendor
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">vendor</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="col-md-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="btn-group-vertical">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("VendorList", "Vendor")'">Back To Panel</button>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="form-horizontal">
                    @using (Html.BeginForm("EditVendor", "Vendor", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="SuccessMsg" style="color: red">@ViewBag.SuccessMsg</div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Sector Name</label>
                                        <div class="col-sm-6">
                                            <select id="ddlSector" name="ddlSector" class="form-control">
                                                <option value="0">---Select---</option>
                                                @if (ViewBag.Sector != null)
                                                {
                                                    foreach (System.Data.DataRow drSectorName in ViewBag.Sector.Rows)
                                                    {
                                                        <option value="@drSectorName["Id"]">@drSectorName["SectorName"]</option>
                                                    }
                                                }
                                                <script>
                                                    document.getElementById('ddlSector').value = '@ViewBag.SectorId';
                                                </script>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">FirstName</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @id = "FirstName", @Value = ViewBag.FirstName })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">LastName</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.LastName, new { placeholder = "", @id = "LastName", @class = "form-control", @Value = ViewBag.LastName })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Mobile</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.MobileNo, new { placeholder = "", @id = "MobileNo", @class = "form-control", onkeypress = "return ValidateNumber(event);", maxlength = 10, @Value = ViewBag.MobileNo })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Email</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.Email, new { placeholder = "", @id = "Email", @class = "form-control", @Value = ViewBag.Email })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Address</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.Address, new { placeholder = "", @id = "Address", @class = "form-control", @Value = ViewBag.Address })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">UserName</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.UserName, new { placeholder = "", @id = "UserName", @class = "form-control", @Value = ViewBag.UserName })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Password</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.Password, new { placeholder = "", @id = "Password", @class = "form-control", @Value = ViewBag.Password })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Company Name</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.CompanyName, new { placeholder = "", @id = "CompanyName", @class = "form-control", onClick = "ClearTextbox('CompanyName')", @Value = ViewBag.CompanyName })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">GSTNo</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.GSTNo, new { placeholder = "", @id = "GSTNo", @class = "form-control", onClick = "ClearTextbox('GSTNo')", @Value = ViewBag.GSTNo })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">PanCardNo</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(m => m.PanCardNo, new { placeholder = "", @id = "PanCardNo", @class = "form-control", onClick = "ClearTextbox('PanCardNo')", @Value = ViewBag.PanCardNo })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="FLedgerCode" class="col-sm-2 control-label">Photo</label>
                                        <div class="col-sm-3">
                                            <input type="file" name="Photo" id="Photo" /><br />
                                            @if (ViewBag.Photo != null && ViewBag.Photo != "")
                                            {
                                                <div class="form-group has-feedback" id="imgicon">
                                                    <img src="~/image/vendorphoto/@ViewBag.Photo" height="100" width="100" onClick="window.open(this.src);" />
                                                </div>
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="box-footer text-right">
                            @* <input type="button" class="btn btn-orange" value="Cancel" />*@
                            <input type="submit" value="Save" class="btn btn-primary" onclick="return ValidVendor();" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <script>
        function ValidVendor() {
            var status = true;
            var sector = document.getElementById("ddlSector").value;
            if (sector == null || sector == "" || sector == "0") {
                document.getElementById("ddlSector").style.border = "1px solid #ff0000";
                document.getElementById("ddlSector").style.color = "#ff0000";
                document.getElementById("ddlSector").value = "0";
                status = false;
                return false;
            }

            var FirstName = document.getElementById("FirstName").value;
            if (FirstName == null || FirstName == "" || FirstName == "Please Enter FirstName") {
                document.getElementById("FirstName").style.border = "1px solid #ff0000";
                document.getElementById("FirstName").style.color = "#ff0000";
                document.getElementById("FirstName").value = "Please Enter FirstName";
                status = false;
                return false;
            }

            var LastName = document.getElementById("LastName").value;
            if (LastName == null || LastName == "" || LastName == "Please Enter LastName") {
                document.getElementById("LastName").style.border = "1px solid #ff0000";
                document.getElementById("LastName").style.color = "#ff0000";
                document.getElementById("LastName").value = "Please Enter LastName";
                status = false;
                return false;
            }

            var MobileNo = document.getElementById("MobileNo").value;
            if (MobileNo == null || MobileNo == "" || MobileNo == "Please Enter MobileNo") {
                document.getElementById("MobileNo").style.border = "1px solid #ff0000";
                document.getElementById("MobileNo").style.color = "#ff0000";
                document.getElementById("MobileNo").value = "Please Enter MobileNo";
                status = false;
                return false;
            }

            var UserEmail = document.getElementById("Email").value;
            if (/(.+)(.+){2,}\.(.+){2,}/.test(UserEmail) || UserEmail == "Please Enter Valid Email" || UserEmail == "" || UserEmail == null) {

            }
            else {
                document.getElementById("Email").style.border = "1px solid #ff0000";
                document.getElementById("Email").style.color = "#ff0000";
                document.getElementById("Email").value = "Please Enter Valid Email";
                status = false;
                return false;
            }

            var UserName = document.getElementById("UserName").value;
            if (UserName == null || UserName == "" || UserName == "Please Enter UserName") {
                document.getElementById("UserName").style.border = "1px solid #ff0000";
                document.getElementById("UserName").style.color = "#ff0000";
                document.getElementById("UserName").value = "Please Enter UserName";
                status = false;
                return false;
            }
            if (UserName.length < 6 || UserName == "UserName Must Be 6 Char Long") {
                document.getElementById("UserName").style.border = "1px solid #ff0000";
                document.getElementById("UserName").style.color = "#ff0000";
                document.getElementById("UserName").value = "UserName Must Be 6 Char Long";
                status = false;
                return false;
            }

            var Password = document.getElementById("Password").value;
            if (Password == null || Password == "" || Password == "Please Enter Password") {
                document.getElementById("Password").style.border = "1px solid #ff0000";
                document.getElementById("Password").style.color = "#ff0000";
                document.getElementById("Password").value = "Please Enter Password";
                status = false;
                return false;
            }
            if (Password.length < 8 || Password == "Password Must Be 8 Char Long") {
                document.getElementById("Password").setAttribute('type', 'text');
                document.getElementById("Password").style.border = "1px solid #ff0000";
                document.getElementById("Password").style.color = "#ff0000";
                document.getElementById("Password").value = "Password Must Be 8 Char Long";
                status = false;
                return false;
            }

        }

        function ValidateNumber(e) {

            var keycode = (e.which) ? e.which : e.keyCode;
            //console.log(keycode);
            var phn = document.getElementById('MobileNo');
            //comparing pressed keycodes
            if (!(keycode == 8 || keycode == 46) && (keycode < 48 || keycode > 57)) {
                return false;
            }
            return true;
        };

    </script>

}


